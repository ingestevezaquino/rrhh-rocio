@model ProyectoRRHH.Models.departamento

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>¿Eliminar Departamento?</h1>

<h3>Si eliminas este departamento se elimininara de forma permanente.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <a>Departamento</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.departamento1)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Volver</a>
    </form>
</div>
